{
  "name": "ai-contribution-validation-action",
  "version": "0.1.0",
  "description": "AI-powered GitHub Action that validates pull requests against contribution guidelines",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build lib/src/index.js -o dist --source-map",
    "build:watch": "tsc --watch",
    "test": "vitest run --coverage",
    "test:unit": "vitest run test/unit --coverage",
    "test:integration": "vitest run test/integration --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:debug": "vitest run --reporter=verbose --testTimeout=30000",
    "lint": "eslint \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"test/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\" \"*.{json,md,yml,yaml}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" \"test/**/*.{ts,js,json}\" \"*.{json,md,yml,yaml}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "validate": "npm run clean && npm run typecheck && npm run lint && npm run format:check && npm run test",
    "package": "npm run build && npm run validate",
    "prepare": "simple-git-hooks",
    "clean": "rimraf dist lib coverage .tsbuildinfo",
    "dev": "npm run build:watch",
    "start": "node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shopware/ai-contribution-validation-action.git"
  },
  "keywords": [
    "github-action",
    "ai",
    "validation",
    "pull-request",
    "contribution",
    "guidelines",
    "typescript"
  ],
  "author": "Shopware",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shopware/ai-contribution-validation-action/issues"
  },
  "homepage": "https://github.com/shopware/ai-contribution-validation-action#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@google/generative-ai": "^0.24.1",
    "zod": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "happy-dom": "^18.0.1",
    "lint-staged": "^16.1.5",
    "msw": "^2.10.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.1",
    "tdd-guard-vitest": "^0.1.3",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged && npm run typecheck"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
